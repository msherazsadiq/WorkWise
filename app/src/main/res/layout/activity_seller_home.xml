<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerHomeActivity"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/main">
    <View
        android:layout_width="350dp"
        android:layout_height="70dp"
        android:background="@drawable/rectangle"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"></View>
    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/circle"
        android:layout_marginTop="-60dp"
        android:layout_marginLeft="30dp"></ImageView>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hi, Emma"
        android:textColor="@color/white"
        android:textSize="15dp"
        android:layout_marginTop="-50dp"
        android:layout_marginLeft="90dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome Back"
        android:textColor="@color/white"
        android:textSize="18dp"
        android:textStyle="bold"

        android:layout_marginLeft="90dp"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="570dp"
        android:layout_marginTop="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/spcialtowhitebox"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="My level"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="170dp"
                android:layout_height="100dp"
                android:layout_marginLeft="200dp"
                android:layout_marginTop="-100dp"
                android:background="@drawable/spcialtowhitebox"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Response Rate"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="30dp"
                android:text="Earnings"
                android:textColor="@color/special"
                android:textSize="19dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Earnings in April"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="40dp"
                android:text="$0"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Active Orders"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="40dp"
                android:text="0 ($ 0)"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Available for Withdraw"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="40dp"
                android:text="$0"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Completed Orders"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="40dp"
                android:text="0 ($ 0)"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Payment Being Cleared"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="40dp"
                android:text="$0"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:text="Cancelled Orders"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:layout_marginTop="-20dp"
                android:layout_marginRight="40dp"
                android:text="0 (-$ 0)"
                android:textColor="@color/special"
                android:textSize="15dp" />

            <View
                android:layout_width="340dp"
                android:layout_height="1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/lightgrey" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="110dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/spcialtowhitebox"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="Rating"
                android:textColor="@color/white"
                android:textSize="15dp" />

            <TextView
                android:layout_width="350dp"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/spcialtowhitebox"
                android:paddingLeft="10dp"
                android:paddingTop="5dp"
                android:text="My Gigs"
                android:textColor="@color/white"
                android:textSize="15dp" />


        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical"
        android:layout_marginBottom="0dp">

        <include
            android:id="@+id/bottom_menu"
            layout="@layout/bottommenu_athome_seller"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_gravity="bottom"
            android:layout_marginBottom="0dp"
            android:background="#27374D"
            android:orientation="horizontal" />

    </LinearLayout>



</LinearLayout>