<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerProfileActivity"
    android:id="@+id/main"
    android:background="@color/main"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@color/special"
        android:orientation="vertical">
        <ImageButton
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@drawable/icon_logout"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="330dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:textColor="@color/orange"
            android:textSize="14dp"
            android:textStyle="bold"
            android:layout_marginLeft="320dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@drawable/whitecircle"
            android:layout_marginTop="-40dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/main"/>

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/whitecircle"
            android:layout_marginTop="-80dp"
            android:layout_marginLeft="30dp"
            android:backgroundTint="@color/special"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:text="Daniel"
            android:textStyle="bold"
            android:textSize="24dp"
            android:textColor="@color/main"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="35dp"/>
    </LinearLayout>


    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/special"
        android:textSize="17dp"
        android:text="Seller Mode"
        android:textStyle="bold"
        android:background="@drawable/buttonbox"
        android:backgroundTint="@color/skyblue"
        android:gravity="center_vertical"
        android:paddingLeft="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="25dp"
        android:background="@drawable/greenrectangle"
        android:backgroundTint="@color/special"
        android:layout_marginTop="-40dp"
        android:layout_marginLeft="290dp"></ImageButton>
    <ImageButton
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="-25dp"
        android:background="@drawable/whitecircle"
        android:layout_marginLeft="330dp"></ImageButton>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Selling"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="@color/special"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="40dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_earnings"
        android:backgroundTint="@color/special"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/special"
        android:text="Earnings"
        android:textSize="18dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-25dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-35dp"/>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_managegigs"
        android:backgroundTint="@color/special"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/special"
        android:text="Manage Gigs"
        android:textSize="18dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-25dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-35dp"/>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Settings"
        android:textStyle="bold"
        android:textSize="19dp"
        android:textColor="@color/special"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"/>
    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_setting"
        android:backgroundTint="@color/special"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/special"
        android:text="Preferences"
        android:textSize="18dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-25dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-35dp"/>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_accountsetting"
        android:backgroundTint="@color/special"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/special"
        android:text="Account"
        android:textSize="18dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-25dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-35dp"/>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/icon_helpsupport"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/special"
        android:text="Help and Support"
        android:textSize="18dp"
        android:layout_marginLeft="70dp"
        android:layout_marginTop="-25dp"/>
    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_gravity="right"
        android:layout_marginRight="30dp"
        android:layout_marginTop="-35dp"/>

    <View
        android:layout_width="340dp"
        android:layout_height="1dp"
        android:background="@color/lightgrey"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>

    <include
        android:id="@+id/bottom_menu"
        layout="@layout/bottommenu_atprofile_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="-100dp"
        android:background="#27374D"
        android:orientation="horizontal" />

</LinearLayout>