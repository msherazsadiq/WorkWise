<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PrefrencesActivity"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/main">


    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:background="@drawable/top_bar" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_backarrow" />

            <TextView
                android:id="@+id/search_serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:text="Prefrences"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </FrameLayout>
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Notifications"
        android:textColor="@color/special"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Push Notifications"
        android:textColor="@color/special"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/greenrectangle"

        android:layout_marginTop="-30dp"
        android:layout_marginLeft="310dp"></ImageButton>
    <ImageButton
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/whitecircle"
        android:layout_marginLeft="340dp"></ImageButton>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/lightslategray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Inbox Messages"
        android:textColor="@color/special"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/greenrectangle"

        android:layout_marginTop="-30dp"
        android:layout_marginLeft="310dp"></ImageButton>
    <ImageButton
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/whitecircle"
        android:layout_marginLeft="340dp"></ImageButton>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/lightslategray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Order Messages"
        android:textColor="@color/special"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/greenrectangle"

        android:layout_marginTop="-30dp"
        android:layout_marginLeft="310dp"></ImageButton>
    <ImageButton
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/whitecircle"
        android:layout_marginLeft="340dp"></ImageButton>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/lightslategray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />

    <TextView
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="Order Updates"
        android:textColor="@color/special"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/greenrectangle"

        android:layout_marginTop="-30dp"
        android:layout_marginLeft="310dp"></ImageButton>
    <ImageButton
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/whitecircle"
        android:layout_marginLeft="340dp"></ImageButton>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/lightslategray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />
    <TextView
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Rating Reminders"
        android:textColor="@color/special"
        android:textSize="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="20dp"
        android:background="@drawable/greenrectangle"

        android:layout_marginTop="-30dp"
        android:layout_marginLeft="310dp"></ImageButton>
    <ImageButton
        android:layout_width="20dp"

        android:layout_height="20dp"
        android:layout_marginTop="-20dp"
        android:background="@drawable/whitecircle"
        android:layout_marginLeft="340dp"></ImageButton>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/lightslategray"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Currency"
        android:textColor="@color/special"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PKR"
        android:textColor="@color/special"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="35dp"/>

    <ImageButton
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:background="@drawable/icon_downarrow"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="-30dp"/>

    <View
        android:layout_width="350dp"
        android:layout_height="2dp"
        android:background="@color/lightslategray"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"/>
</LinearLayout>