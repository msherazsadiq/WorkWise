<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ManageOrdersActivity"
    android:id="@+id/main"
    android:orientation="vertical"
    android:background="@color/main">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center">
        <!-- Auto layout, variables, and unit scale are not yet supported -->
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <View
                android:id="@+id/rectangle_1"
                android:layout_width="350dp"
                android:layout_height="45dp"
                android:background="@drawable/top_bar" />

            <ImageView
                android:layout_width="26dp"
                android:layout_height="26dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/icon_backarrow" />

            <TextView
                android:id="@+id/search_serv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center|top"
                android:layout_marginTop="10dp"
                android:background="@null"
                android:text="Manage Orders"
                android:textColor="#FFFFFF"
                android:textSize="17sp"
                tools:ignore="TouchTargetSizeCheck" />
        </FrameLayout>
    </LinearLayout>


    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/special"
        android:text="Updates"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/buttonbox"
        android:backgroundTint="@color/lightestgrey"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="310dp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/special"
        android:text="Active"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/buttonbox"
        android:backgroundTint="@color/lightestgrey"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="310dp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/special"
        android:text="Late Deliveries"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/buttonbox"
        android:backgroundTint="@color/lightestgrey"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="310dp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/special"
        android:text="New"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/buttonbox"
        android:backgroundTint="@color/lightestgrey"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="310dp"/>
    <TextView
        android:layout_width="350dp"
        android:layout_height="50dp"
        android:textColor="@color/special"
        android:text="Revisions Requested"
        android:textSize="16dp"
        android:textStyle="bold"
        android:gravity="center_vertical"
        android:background="@drawable/buttonbox"
        android:backgroundTint="@color/lightestgrey"
        android:paddingLeft="20dp"
        android:paddingTop="5dp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="15dp"/>

    <ImageButton
        android:layout_width="30dp"
        android:layout_height="20dp"
        android:background="@drawable/icon_forwardarrow"
        android:layout_marginTop="-35dp"
        android:layout_marginLeft="310dp"/>


    <include
        android:id="@+id/bottom_menu"
        layout="@layout/bottommenu_atorders_seller"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom"
        android:layout_marginBottom="0dp"
        android:layout_marginTop="40dp"
        android:background="#27374D"
        android:orientation="horizontal" />


</LinearLayout>